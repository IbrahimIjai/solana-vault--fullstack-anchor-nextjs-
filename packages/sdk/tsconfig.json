{
  "_deprecated": true,
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ESM",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo"
  ],
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "rootDir": "./src",
    "outDir": "./dist", 
    "jsx": "react-jsx",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}